pipeline {
    environment {
        registry = "kubelb01:5000"
        registryCredential = 'kubelb01-registry'
        DOCKER_IMAGE="nginx-example"
    }
    agent any
    stages {
        stage('Clone From GitHub') {
            steps {
                sh 'git clone https://github.com/Dexter-Yoon/nginx-example.git'
            }
        }
        stage('Change Directory') {
            steps {
                sh 'cd nginx-example'
            }
        }
        stage('File List') {
            steps {
                sh 'ls -al'
            }
        }
        stage('Build ') {
            steps {
                sh 'ls -al'
            }
        }
    }
}
